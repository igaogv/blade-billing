model Client {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String
  status       String   @default("ACTIVE")
  monthlyValue Float    // <-- ADICIONE ESTA LINHA
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  billings Billing[]
}

